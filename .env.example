# Heleerra API Configuration
# Copy this file to .env and update with your actual credentials

# Environment Settings
HELEERRA_ENVIRONMENT=sandbox
HELEERRA_BASE_URL=https://heleerra.com

# API Credentials (Sandbox)
# Use test_ prefix for sandbox credentials
HELEERRA_SANDBOX_MERCHANT_KEY=test_merchant_your_sandbox_key_here
HELEERRA_SANDBOX_API_KEY=test_api_your_sandbox_key_here
HELEERRA_SANDBOX_WEBHOOK_SECRET=test_webhook_your_sandbox_secret_here

# API Credentials (Production)
# No prefix for production credentials
HELEERRA_PRODUCTION_MERCHANT_KEY=your_production_merchant_key_here
HELEERRA_PRODUCTION_API_KEY=your_production_api_key_here
HELEERRA_PRODUCTION_WEBHOOK_SECRET=your_production_webhook_secret_here

# Application Settings
APP_URL=https://yourapp.com
APP_DEBUG=true

# Webhook URLs
WEBHOOK_URL=https://yourapp.com/webhooks/heleerra
SUCCESS_URL=https://yourapp.com/payment/success
FAILURE_URL=https://yourapp.com/payment/failed
CANCEL_URL=https://yourapp.com/payment/cancelled